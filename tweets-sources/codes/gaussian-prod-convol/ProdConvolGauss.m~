%%
% Illustrate product and convolution of gaussian functions.


addpath('../toolbox/');
rep = MkResRep();


% generate a covariance
R = @(t)[cos(t) sin(t); -sin(t) cos(t)];
C = @(t,s)R(t)*diag([1 s])*R(-t);

eta = .3^2;
c0 = C(pi/3,eta);


daw_cov(c0, [1 0 0]);
%    saveas(gcf, [rep 'fixed-' znum2str(it,2) '.png']);

q = 50; 
for it=1:q
    
    s = (it-1)/(q-1);
    c1 = C(pi*s,eta);
    
    
    
    c = (c0+c1)/2;
    c = inv( (inv(c0)+inv(c1))/2 );
        
        
    daw_cov(c, [0 0 1]);
%    saveas(gcf, [rep 'input-' znum2str(it,2) '.png']);
    
    
    daw_cov(c, [.5 0 .5]);
    drawnow;
%    saveas(gcf, [rep 'anim-' znum2str(it,2) '.png']);

end

